<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:padding="16dp"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <!-- TextView for displaying input and results -->
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_layout"
        android:layout_marginBottom="24dp"
        android:gravity="end"
        android:padding="10dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- GridLayout for all the calculator buttons -->
    <GridLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:columnCount="4"
        android:rowCount="5">

        <!-- Row 1: Added a DEL button for backspace -->
        <Button
            android:id="@+id/button_clear"
            style="@style/CalculatorButton.Operator"
            android:text="C" />

        <Button
            android:id="@+id/button_backspace"
            style="@style/CalculatorButton.Operator"
            android:text="⌫" />

        <Button
            android:id="@+id/button_percentage"
            style="@style/CalculatorButton.Operator"
            android:text="%" />
        <Button
            android:id="@+id/button_divide"
            style="@style/CalculatorButton.Operator"
            android:text="÷" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/button_7"
            style="@style/CalculatorButton.Number"
            android:text="7" />
        <Button
            android:id="@+id/button_8"
            style="@style/CalculatorButton.Number"
            android:text="8" />
        <Button
            android:id="@+id/button_9"
            style="@style/CalculatorButton.Number"
            android:text="9" />
        <Button
            android:id="@+id/button_multiply"
            style="@style/CalculatorButton.Operator"
            android:text="×" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/button_4"
            style="@style/CalculatorButton.Number"
            android:text="4" />
        <Button
            android:id="@+id/button_5"
            style="@style/CalculatorButton.Number"
            android:text="5" />
        <Button
            android:id="@+id/button_6"
            style="@style/CalculatorButton.Number"
            android:text="6" />

        <Button
            android:id="@+id/button_add"
            style="@style/CalculatorButton.Operator"
            android:text="+" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/button_1"
            style="@style/CalculatorButton.Number"
            android:text="1" />
        <Button
            android:id="@+id/button_2"
            style="@style/CalculatorButton.Number"
            android:text="2" />
        <Button
            android:id="@+id/button_3"
            style="@style/CalculatorButton.Number"
            android:text="3" />
        <Button
            android:id="@+id/button_subtract"
            style="@style/CalculatorButton.Operator"
            android:text="-" />

        <!-- Row 5 -->
        <Button
            android:id="@+id/button_0"
            style="@style/CalculatorButton.Number"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="0" />
        <Button
            android:id="@+id/button_dot"
            style="@style/CalculatorButton.Number"
            android:text="." />
        <Button
            android:id="@+id/button_equals"
            style="@style/CalculatorButton.Equals"
            android:text="=" />

    </GridLayout>

</RelativeLayout>
